<%= flash[:notice] %>
<% form_tag do -%>
<p><label for="login">Email</label><br/>
<%= text_field_tag 'email' %></p>

<p><label for="password">Password</label><br/>
<%= password_field_tag 'password' %></p>

<p><label for="remember_me">Remember me:</label>
<%= check_box_tag 'remember_me' %></p>

<p><%= submit_tag 'Log in' %> &middot; <%= link_to_function 'I forgot my password...' do |p|
  p << "document.location = '#{reset_password_path}?email=' + $('#email').val()"
end %></p>
<% end -%>
